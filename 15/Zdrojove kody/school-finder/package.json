		"@typescript-eslint/parser": "^6.0.0",
		"@vite-pwa/sveltekit": "^0.2.7",
		"autoprefixer": "^10.4.16",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"langchain": "^0.0.169",
		"postcss": "^8.4.31",
		"prettier": "^2.8.0",
